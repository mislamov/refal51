TResult  RefVariable_e::init(RefData**&tpl, Session *s, RefData **&l, RefData **&r) {
    SAVE_STATE_AND_VAR(tpl);
    MOVE_TO_next_template(tpl);
    return GO;
};

TResult  RefVariable_e::back(RefData**&tpl, Session *s, RefData **&l, RefData **&r) {
    RESTORE_STATE(tpl);

    if (l) {
        // предыдущее значение не пустое
        if (r==s->getTopDataSkob()) { // TODO: оптимизировать - хранить ближе верхнюю скобку
            MOVE_TO_pred_template(tpl);
            return BACK;
        };
        MOVE_TO_next_term(r);
        r = endOfTerm(r);
    } else {
        MOVE_TO_next_term(r);
        l = beginOfTerm(r);
        r = endOfTerm(r);
    }

    #ifdef TESTCODE
    if (! s->getStackOfDataSkob()->size()) SYSTEMERROR("empty stack!");
    #endif
    if (r==s->getStackOfDataSkob()->top()) {
        tpl=tpl->getPred();
        return BACK;
    };
    SAVE_STATE_AND_VAR( tpl); // TODO: Р_РїС'РёР_РёР·РёС_Р_Р_Р°С'С_
    tpl=tpl->getNext();
    return GO;

};

bool    RefVariable_e::operator==(RefData &rd) {
    return ref_dynamic_cast<RefVariable_e >(&rd);
};
